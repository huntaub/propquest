<br/>
<table class='showInfo'>
<tr>
<td class='votes'>
		<%= render :partial => 'votes', :locals => {:question => @question} %>
</td>
<td class='ratingTD' id='<%= "rating" + @question.id.to_s %>'>
		<%= render :partial => 'current_rate', :locals => {:question => @question} %>
</td>
</tr>
</table>
<h3 class='showTitle'>
  <%=h(@question.title).gsub("\n","<br/>")  %>
</h3>

<div class='showAnswer'>
	<%=h @question.section.name %> - <%=h @question.answer.description %>
</div>
<div class='showLinks'>
<% if logged_in %>
	<span id='<%= "rate" + @question.id.to_s %>'>
		<%= render :partial => 'link_to_rate', :locals => {:question => @question} %>
	</span> |
	<% if User.find(session[:user_id]) == @question.user %>
		<%= link_to 'Edit', edit_question_path(@question) %> |
	<% end %>
<% end %>
<%= link_to 'Back', questions_path %>
</div>
<div class='qUser'>
	Created By: <%= link_to @question.user.name, @question.user %>
	<br/>
	<%= user_photo(@question.user, :small) %>
</div>