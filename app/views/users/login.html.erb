<% form_tag do %>
		<h1>Please Log In</h1>
		
		<div>
			<label for="name">Name</label>
			<%= text_field_tag :name, params[:name] %>
		</div>
		<br/>
		<div>
			<label for="password">Password</label>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<br/>
		<div>
			<%= submit_tag "Login" %>
		</div>
<% end %>