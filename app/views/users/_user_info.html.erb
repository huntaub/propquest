<% if !logged_in %>
	<%= link_to "Login", :controller => :users, :action => :login %>
	<br/><br/>
	<%= link_to "Register", :controller => :users, :action => :new %>
<% else %>
	<% user = User.find(session[:user_id]) %>
	<p> Welcome, <%= link_to user_name(user), user %> </p>
	<%= user_photo(user, :small) %>
	<br/>
	<%= link_to "Logout", :controller => :users, :action => :logout %>
	<% if 0 == 1 %>
	<br/><br/>
	<% num = num_questions_needing_description(user) %>
	<% unless num == 0 %>
		<%= link_to "Needs Description (#{num})", :controller => 'users', :action => 'flagged_questions', :id => user %>
	<% end %>
	<% end %>
<% end %>